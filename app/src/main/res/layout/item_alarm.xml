<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="alarm"
            type="org.prography.lemorning.src.model.Alarm" />
        <variable
            name="vm"
            type="org.prography.lemorning.src.viewmodel.AlarmViewModel" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="@{() -> vm.delete(alarm)}"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/alarm_recycler_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/alarm_recycler_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{alarm.time}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/alarm_recycler_image"/>
            <LinearLayout
                android:id="@+id/alarm_recycler_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setWeek="@{alarm.week}"
                app:layout_constraintLeft_toRightOf="@id/alarm_recycler_image"
                app:layout_constraintTop_toBottomOf="@id/alarm_recycler_time">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"/>
            </LinearLayout>

            <Switch
                android:id="@+id/alarm_recycler_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{alarm.on}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
