<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="alarm"
            type="org.prography.lemorning.src.models.Alarm" />
        <variable
            name="vm"
            type="org.prography.lemorning.src.viewmodel.AlarmDBViewModel" />
        <variable
            name="setVM"
            type="org.prography.lemorning.src.viewmodel.AlarmViewModel" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/alarm_recycler_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="18dp"
        android:layout_marginHorizontal="18dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/alarm_recycler_image"
                android:layout_width="62dp"
                android:layout_height="62dp"
                song="@{alarm.songNo}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"/>
            <View
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/background_round_12_yellow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="56dp"/>
            <TextView
                android:id="@+id/alarm_recycler_am_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{alarm.time.substring(0,2)}"
                android:textSize="11sp"
                android:textColor="#171717"
                android:lineSpacingExtra="6sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/alarm_recycler_image"
                android:layout_marginTop="28dp"
                android:layout_marginStart="21dp"/>
            <TextView
                android:id="@+id/alarm_recycler_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{alarm.time.substring(3)}"
                android:textSize="24sp"
                android:textColor="#171717"
                android:lineSpacingExtra="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/alarm_recycler_am_pm"
                android:layout_marginStart="3dp"
                android:layout_marginTop="13dp"/>
            <LinearLayout
                android:id="@+id/alarm_recycler_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:setWeek="@{alarm.week}"
                app:layout_constraintLeft_toRightOf="@id/alarm_recycler_image"
                app:layout_constraintTop_toBottomOf="@id/alarm_recycler_time"
                android:layout_marginStart="18dp"
                android:layout_marginTop="11dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginEnd="8dp"
                    android:text="S"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginEnd="8dp"
                    android:text="M"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginEnd="8dp"
                    android:text="T"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginEnd="8dp"
                    android:text="W"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginEnd="8dp"
                    android:text="T"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginEnd="8dp"
                    android:text="F"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#bfbfbf"
                    android:lineSpacingExtra="6sp"
                    android:text="S"/>

            </LinearLayout>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/alarm_recycler_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{alarm.on}"
                android:buttonTint="@color/colorPrimary"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="13dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
