<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_dialog_simple_message"
    android:layout_width="match_parent"
    android:layout_height="191dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:background="@drawable/background_round_shape_8_white">

    <TextView
        android:id="@+id/tv_desc_dialog_simple_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/noto_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="#171717"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_positive_dialog_simple_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Description" />

    <View
        android:id="@+id/v_separator1_simple_message"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efefef"
        app:layout_constraintBottom_toTopOf="@id/tv_positive_dialog_simple_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_positive_dialog_simple_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_bottom_round_white"
        android:fontFamily="@font/noto_medium"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/confirm"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>